<% if controller_name != 'sessions' %>
  <p>
    <span class="text-muted">Already have an account?</span>
  </p>
  <%= link_to "Log in", new_session_path(resource_name), class: "btn btn-outline-primary btn-sm mb-1 px-3" %>
<% end %>

<% if devise_mapping.registerable? && controller_name != 'registrations' %>
  <p>
    <span class="text-muted">Don't have an account?</span>
  </p>
  <%= link_to "Sign up", new_registration_path(resource_name), class: "btn btn-outline-success btn-sm mb-1 px-3" %>
<% end %>

<% if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "Forgot your password?", new_password_path(resource_name), class: "btn btn-link btn-sm mb-1 px-2 text-decoration-none" %>
<% end %>

<% if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class: "btn btn-link btn-sm mb-1 px-2 text-decoration-none" %>
<% end %>

<% if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name), class: "btn btn-link btn-sm mb-1 px-2 text-decoration-none" %>
<% end %>

<% if devise_mapping.omniauthable? %>
  <% resource_class.omniauth_providers.each do |provider| %>
    <%= button_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), data: { turbo: false }, class: "btn btn-outline-dark btn-sm mb-1 px-3" %>
  <% end %>
<% end %>