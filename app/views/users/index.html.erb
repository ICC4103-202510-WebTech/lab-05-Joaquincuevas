<div style="
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
  background-image: url('<%= asset_path('wallpaper8.jpg') %>');
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;">
</div>
<div class="container mt-4">
  <% if notice.present? %>
    <div class="alert alert-success">
      <%= notice %>
    </div>
  <% end %>

  <h1>Users</h1>

  <div class="table-responsive">
    <table class="table table-striped table-hover">
      <thead class="table-light">
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Messages</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.first_name %> <%= user.last_name %></td>
            <td><%= user.email %></td>
            <td>
              <% user_message_count = Message.where(user_id: user.id).count %>
              <span class="badge bg-primary rounded-pill">
                <%= user_message_count %> <%= 'message'.pluralize(user_message_count) %>
              </span>
            </td>
            <td>
              <div class="btn-group">
                <%= link_to "View", user_path(user), class: "btn btn-sm btn-outline-primary" %>
                <%= link_to "Edit", edit_user_path(user), class: "btn btn-sm btn-outline-secondary" %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="mt-3">
    <%= link_to "New User", new_user_path, class: "btn btn-success" %>
  </div>
</div>